{
    "compilerOptions": {
        "strict": true,
        "module": "es2015",
        "moduleResolution": "node",
        "noEmitOnError": true,
        "suppressImplicitAnyIndexErrors": true,
        "allowSyntheticDefaultImports": true,
        "target": "ES5",
        "declaration": true,
        "lib": ["es7"]
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules"]
}
